<p><a href='/1/edit'>Edit</a> | <a href='/new'>Create</a></p>
<form method='post' action='/<%= action %>'>
  <% unless form.errors.empty? %>
    <b>Erorrs:</b>:
    <ul>
      <% if form.errors[:title].include?(:not_present) %>
        <li>You forgot the title!</li>
      <% end %>

      <% if form.errors[:body].include?(:not_present) %>
        <li>You forgot the body!</li>
      <% end %>
    </ul>
  <% end %>

  <label>
    Title <br>
    <input type='text' name='title' value='<%= form.params["title"] %>'>
  </label>
  <br>
  <br>
  <label>
    Body <br>
  <input type='text' name='body' value='<%= form.params["body"] %>'>
  </label>

  <br>
  <br>
  <button type="submit">
    Save
  </button>
</form>
